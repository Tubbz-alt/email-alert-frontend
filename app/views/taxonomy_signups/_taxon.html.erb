<% is_parent ||= false%>
<% taxon_index ||= 0 %>
<div class='multiple-choice' data-target='radio<%= taxon_index %>'>
  <input type='radio' name='taxon-list' value='<%= taxon['base_path'] %>' <%= 'checked' if is_parent %>>
  <label for="<%= taxon['title'] %>">
    <%= taxon['title'] %>
  </label>
</div>

<div id='radio<%= taxon_index %>' class='description-block panel panel-border-narrow js-hidden' >
  <% if is_parent %>
    <p> This will include alerts about all the topics below </p>
  <% else %>
    <p> This will include: <%= taxon['description'] %> </p>
  <% end %>

  <a class='button' role='button' href="<%= confirm_taxonomy_signup_path(paths: [taxon['base_path']]) %>">
    Continue
  </a>
</div>
