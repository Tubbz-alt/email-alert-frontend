<% is_parent ||= false %>

<input type='radio' name='taxon-list' id='<%= taxon['title'] %>' value='<%= taxon['base_path'] %>' <%= 'checked' if is_parent %>>
<label for="<%= taxon['title'] %>">
  <%= taxon['title'] %>
</label>

<% if is_parent %>
  <p> including alerts about all the topics below </p>
<% else %>
  <p> this will include alerts about <%= taxon['description'] %> </p>
<% end %>

<a class='taxonomy-signup-button' href="<%= confirm_taxonomy_signup_path(paths: [taxon['base_path']]) %>">
  Continue
</a>
