<% content_for :title, 'You’ve successfully unsubscribed' %>

<% content_for :head do %>
  <meta name="robots" content="noindex, nofollow">
<% end %>

<% content_for :head_css do %>
  <%= stylesheet_link_tag 'application-without-elements' %>
<% end %>

<%= render 'govuk_publishing_components/components/back_link', {
  href: @back_url,
} %>

<div class="grid-row">
  <div class="column-two-thirds">
    <%= render 'govuk_component/title', title: 'You’ve successfully unsubscribed' %>
  </div>
</div>

<div class="grid-row">
  <div class="column-two-thirds">
    <%= render 'govuk_component/govspeak', {
      content: %{
        <p>You won’t get any more emails from GOV.UK.</p>
        <p><a href="#{@back_url}">Back to manage your subscriptions</a>.</p>
      }
    } %>
  </div>
</div>
